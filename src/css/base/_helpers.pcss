.inline-block {
	margin-bottom: 20px;
	&:last-child {
		margin-bottom: 0;
	}
	&__item {
		display: inline-block;
		vertical-align: middle;
		padding: 0 8px;
	}
}

.inline-block--center {
	text-align: center;
}

.hide {
	display: none !important;
}

.hide-m {
	@media (max-width: $below-mobile) {
		display: none;
	}
}
.text-center {
	text-align: center;
}

.bg-white {
	background-color: #fff;
}

.align-center {
	text-align: center;
}
