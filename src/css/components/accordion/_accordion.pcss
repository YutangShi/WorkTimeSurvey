.accordion__item {
  &.is-active {
    .accordion__icon {
      svg {
        color: transparent;
      }
    }
  }
}

.accordion__content {
  display: none;
}

.accordion__trigger {
  width: 100%;
  cursor: pointer;
  @mixin hover-color $primary-color;
}

.accordion__icon {
  display: flex;
  justify-content: center;
  align-items: center;
  svg {
    color: $gray;
    fill: $gray;
    width: 18px;
    height: 18px;
    @media (max-width: $below-small) {
      width: 12px;
      height: 12px;
    }
  }
}
