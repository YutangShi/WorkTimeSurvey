$btn-height: 40px;

.btn-black-icon {
	display: block;
	position: relative;
	background-color: $primary-color;
	color: #fff;
	padding: 0 20px;
	font-size: 1em;
	letter-spacing: 0.07em;
	color: $gray-light;
	text-transform: uppercase;
	height: 40px;
	line-height: 40px;
	box-sizing: content-box;
	border-bottom: 4px solid $gray-dark;
	@mixin hover-bg-color #333, #fff;
}
