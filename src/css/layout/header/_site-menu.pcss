.site-menu {
	height: 100%;
	> li {
		display: inline-block;
		vertical-align: middle;
		line-height: 47px;
		margin-left: 30px;
		> a {
			color: #fff;
			font-size: 1.1em;
			padding: 3px 4px;
			letter-spacing: 1px;
			border-bottom: 1px solid $primary-color;
			transition: border .3s, color .3s;
			&:hover {
				border-bottom: 1px solid #fff;
			}
		}
	}
}
