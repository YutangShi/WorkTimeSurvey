extends ./_layout.pug
block vars
	- var bodyClass = "body-show body-gray";
	- var page_url = "show.html";
	- var page_title = "查看工時";

block content
	section(class="page-banner")
		div(class="wrapper-l page-banner__container")
			h1(class="page-banner__heading") 查看工時
			button(class="btn-s btn-yellow-line" id="btn-latest") <svg role="img" class="star"><use xlink:href="#star"></use></svg>最新
			img(src="/assets/img/workers.jpg" class="img-show-banner")
	div(class="wrapper-l")
		section(class="section time-searchbar")
			| search-bar
		section(class="search-result")
			h2(class="section__heading") 關於工時透明化
			div(class="search-result__table")
				table(class="rwd-table latest-table")
					thead
						tr
							th(class="col-company") 公司名稱
							th(class="col-position")
								span 職稱
								span(class="table-sector") 廠區/門市/分公司
							th(class="col-time") 一週總工時（小時）
							th(class="col-frequency") 加班頻率
					tbody
						tr
							td(data-th="公司名稱" class="col-company")
								span(class="rwd-td")
									a(href="#") 勤業眾信聯合會計師事務所
							td(data-th="職稱 (廠區/門市/分公司)" class="col-position")
								span(class="rwd-td")
									span 副組長
									span(class="table-sector") -
							td(data-th="一週總工時" class="col-time")
								span(class="rwd-td")
									span(class="table-time-bar") 90
							td(data-th="加班頻率" class="col-frequency")
								span(class="rwd-td")
									span(class="table-frequency-circle")
									| 經常
